# Core location + labeling defaults
WXGRAPH_LAT=41.48
WXGRAPH_LON=-81.81
WXGRAPH_SITE=KCLE
WXGRAPH_OUTPUT_DIR=gfs_meteogram_output
WXGRAPH_MODELS=gfs,nam,rap,hrrr,gefs,aigfs,hgefs
WXGRAPH_HOURS=0-168:3

# Logging
WXGRAPH_LOG_LEVEL=INFO

# Refresh cadence hint for external schedulers (minutes)
WXGRAPH_REFRESH_MINUTES=60

# Optional: persist latest JSON/PNG to Cloud Storage
WXGRAPH_GCS_BUCKET=
WXGRAPH_GCS_PREFIX=latest

# Optional: protect /api/meteogram/run
WXGRAPH_RUN_TOKEN=
WXGRAPH_SNOW_RATIO=baxter
WXGRAPH_BLEND_PERIODS=3
